{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake build (Debug)",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "command": "cmake",
            "args": [
                "--build",
                "build/Debug"
            ],
            "problemMatcher": [],
        },
        {
            "label": "Generate Image",
            "type": "shell",
            "command": "./build/Debug/inOneWeekend",
            "args": [
                ">",
                "image.ppm"
            ],
            "problemMatcher": []
        },
        {
            "label": "View image",
            "type": "shell",
            "command": "eog",
            "args": [
                "${workspaceRoot}/image.ppm"
            ],
            "problemMatcher": [],
        },
        {
            "label": "Compile, Generate, and View image",
            "dependsOn": [
                "cmake build (Debug)",
                "Generate Image",
                "View image",
            ],
            "dependsOrder": "sequence",
            "problemMatcher": []
        }
    ]
}